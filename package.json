{
  "name": "openapi-schema-getter",
  "version": "1.2.0",
  "description": "Typescript package to get an OpenApi-specification-compliant dereferenced object from an object or an json, yaml or yml file path string. For 3.1.x and 3.0.x OpenAPI versions.",
  "keywords": [
    "openapi 3.x",
    "typescript",
    "toolkit"
  ],
  "author": "ekoulemaneng <ekoulemaneng@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "src/index.ts",
  "files": [
    "README.md",
    "package.json",
    "dist",
    "LICENSE"
  ],
  "scripts": {
    "start:dev": "nodemon ./src/index.ts --exec \"ts-node ./src/index.ts\"",
    "test": "TS_NODE_PROJECT='test/tsconfig.json' mocha",
    "test-watch": "TS_NODE_PROJECT='test/tsconfig.json' mocha --watch",
    "build": "tsc"
  },
  "dependencies": {
    "yaml": "^2.2.2",
    "@stoplight/json-ref-resolver": "^3.1.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "openapi-objects-types": "^1.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "mocha": {
    "require": "ts-node/register",
    "extensions": [
      "ts",
      "tsx"
    ],
    "spec": [
      "test/**/*.@(ts)"
    ],
    "watch-files": [
      "test/**/*.*",
      "src/**/*.*"
    ],
    "timeout": 1000000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ekoulemaneng/openapi-schema-getter.git"
  },
  "bugs": {
    "url": "https://github.com/ekoulemaneng/openapi-schema-getter/issues"
  },
  "homepage": "https://github.com/ekoulemaneng/openapi-schema-getter#readme"
}
